helpers-signup

<form class="helper-signup" action="/helpers/signup" method = "post">
  <div class="form-group">
    <label class="sr-only">Name</label>
    <input type="text" name=helper[name] class="form-control" id="helper-name" placeholder="Name">
  </div>

  <div class="form-group">
    <label class="sr-only">Email address</label>
    <input type="email" name=helper[email] class="form-control" id="helper-email" placeholder="Email">
  </div>

  <div class="form-group">
    <label class="sr-only">Password</label>
    <input type="password" name=helper[password] class="form-control" id="helper-password" placeholder="Password">
  </div>

  <div class="checkbox">
    <label>
      <input type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Sign up</button>
</form>
