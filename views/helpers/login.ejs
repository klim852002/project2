<form class="helper-login" action="/login" method = "post">

  <div class="form-group">
    <label class="sr-only">Email address</label>
    <input type="email" name="helper[local][email]" class="form-control" id="helper-email" placeholder="Email">
  </div>

  <div class="form-group">
    <label class="sr-only">Password</label>
    <input type="password" name="helper[local][password]" class="form-control" id="helper-password" placeholder="Password">
  </div>

  <div class="checkbox">
    <label>
      <input type="checkbox"> Remember me
    </label>
  </div>
  <button type="submit" class="btn btn-primary">Sign in</button>
</form>
