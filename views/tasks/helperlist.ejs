<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>message</title>
  </head>
  <body>

    <h1>Open Tasklist</h1>

    <ul id="all-task-list">
      <% allTasks.forEach(function(task) { %>
        <%var date = new Date(task.date);
            var day = date.getDate();
            var mth = date.getMonth()+1
            var yr = date.getFullYear()
            %>
        Title:          <%= task.title %><br>
        Description:    <%= task.description %><br>
        Date:           <%= day+'/'+mth+ '/'+yr %><br>
        Time:           <%= task.time %><br>
        Location:       <%= task.location %><br>
        <td><a href="<%=task._id%>/message" class="btn btn-info" role="button" aria-pressed="true">Drop a message!</a></td>
            <hr>
      <% }) %>
      </ul>


  </body>
</html>
