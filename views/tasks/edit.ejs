<h2>Hi, <%= selectedTask.tasker %> </h2>
<h2>Listed Tasks</h2>

<form class="newtask" action="/tasks/newtask" method = "post">

  <div class="form-group">
    <label>Title</label>
    <input type="text" name="task[title]" class="form-control" id="task-title" value="<%=selectedTask.title%>">
  </div>

  <div class="form-group">
    <label>Description</label>
    <input type="text" name="task[description]" class="form-control" id="task-description" rows="3" value="<%=selectedTask.description%>">
  </div>

  <div class="form-group">
    <label>Date</label>
    <input type="text" name="task[date]" class="form-control" id="task-date" value="<%=selectedTask.date%>">
  </div>

  <div class="form-group">
    <label>Time</label>
    <input type="text" name="task[time]" class="form-control" id="task-time"  value="<%=selectedTask.time%>">
  </div>

  <div class="form-group">
    <label>Location</label>
    <input type="text" name="task[location]" class="form-control" id="task-location" value="<%=selectedTask.location%>">
  </div>

  <button type="submit" class="btn btn-primary">Amend</button>
  <button type="submit" class="btn btn-primary">Delete</button>
</form>
