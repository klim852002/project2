<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Message board</title>
  </head>
  <body>

    <button type="button" id="logoutbtn" class="btn btn-default btn-sm"><a href="/logout">Logout</a>
    <span class="glyphicon glyphicon-log-out"></span>
    </button>

    <form class="message" id="postMsg" action="#" method = "post">

      <div class="form-group">
        <label>Title</label>
        <input type="text" name="task[title]" class="form-control" id="task-title" value="<%=viewTask.title%>" readonly>
      </div>

      <div class="form-group">
        <label>Description</label>
        <input type="text" name="task[description]" class="form-control" id="task-description" value="<%=viewTask.description%>" readonly>
      </div>

      <div class="form-group">
        <label>Date</label>
        <input type="text" name="task[date]" class="form-control" id="task-date" value="<%=viewTask.date%>" readonly>
      </div>

      <div class="form-group">
        <label>Time</label>
        <input type="text" name="task[location]" class="form-control" id="task-location" value="<%=viewTask.location%>" readonly>
      </div>

      <div class="form-group" >
        <form class="helper-message" action="#" method="POST">
        <label for="message">Message</label>
        <textarea name="task[message]" type="text" class="form-control" id="task-message" rows="4"></textarea><br>


        <button type="submit" class="btn btn-primary">Post</button>
      </form>
      </div>
    </form>

  </body>
</html>
