<h2>List a new task</h2>

<form class="newtask" action="/tasks/newtask" method = "post">

  <div class="form-group">
    <label class="sr-only">Title</label>
    <input type="text" name="task[title]" class="form-control" id="task-title" placeholder="Task title">
  </div>

  <div class="form-group">
    <label class="sr-only">Description</label>
    <input type="text" name="task[description]" class="form-control" id="task-description" rows="3" placeholder="Task description">
  </div>

  <div class="form-group">
    <label class="sr-only">Date</label>
    <input type="date" name="task[date]" class="form-control" id="task-date" placeholder="Date">
  </div>

  <div class="form-group">
    <label class="sr-only">Time</label>
    <input type="time" name="task[time]" class="form-control" id="task-time"  placeholder="Time">
  </div>

  <div class="form-group">
    <label class="sr-only">Location</label>
    <input type="text" name="task[location]" class="form-control" id="task-location" placeholder="Location">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
